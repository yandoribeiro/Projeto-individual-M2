<%- include('../partials/header', { active: 'tasks' }) %>

<div class="card">
  <div class="card-header">
    <h2 class="card-title">Nova Tarefa</h2>
  </div>
  
  <form action="/tasks" method="POST">
    <div class="form-group">
      <label for="title" class="form-label">Título</label>
      <input type="text" id="title" name="title" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="description" class="form-label">Descrição</label>
      <textarea id="description" name="description" class="form-control" rows="3"></textarea>
    </div>
    
    <div class="form-group">
      <label for="category_id" class="form-label">Categoria</label>
      <select id="category_id" name="category_id" class="form-control" required>
        <option value="">Selecione uma categoria</option>
        <% categories.forEach(category => { %>
          <option value="<%= category.id %>" 
            <%= preSelectedCategoryId === category.id ? 'selected' : '' %>
            style="color: <%= category.color || '#4361ee' %>;">
            <%= category.name %>
          </option>
        <% }); %>
      </select>
    </div>
    
    <div class="form-group">
      <label for="due_date" class="form-label">Data de Vencimento</label>
      <input type="date" id="due_date" name="due_date" class="form-control">
    </div>
    
    <div class="form-group">
      <label for="priority" class="form-label">Prioridade</label>
      <select id="priority" name="priority" class="form-control">
        <option value="low">Baixa</option>
        <option value="medium" selected>Média</option>
        <option value="high">Alta</option>
      </select>
    </div>
    
    <div class="form-group">
      <label for="status" class="form-label">Status</label>
      <select id="status" name="status" class="form-control">
        <option value="pending" selected>Pendente</option>
        <option value="completed">Concluída</option>
        <option value="canceled">Cancelada</option>
      </select>
    </div>
    
    <div style="display: flex; gap: 1rem; justify-content: flex-end;">
      <a href="/tasks" class="btn btn-danger" style="width: auto;">Cancelar</a>
      <button type="submit" class="btn btn-success">Criar Tarefa</button>
    </div>
  </form>
</div>

</div>
